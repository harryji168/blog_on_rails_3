<div class="container d-flex justify-content-center">
<div class="col-sm-6 border m-4">
<h1 class="mt-4 text-center">Sign in</h1>
<%= form_with url: session_path, :class=>"form-group", local: true do |f|  %>
    <%= f.label :email %>
<div class="input-group mb-2">
    <%= f.email_field :email, :class=>'form-control m-2'%>
</div>
<%= f.label :password  %>
<div class="input-group mb-1">     
    <%= f.password_field :password, :class=>'form-control m-2'%> 
</div>
<div class="d-flex justify-content-center">
<div class="mr-2">
<%= f.submit "Sign In", :class => 'btn btn-outline-primary mt-4'%> 
</div>
<div class="ml-2">
<%= link_to("Cancel", root_path, :class => 'btn btn-outline-primary mt-4')%>
</div>
</div>
<% end %> 
</div>
</div>