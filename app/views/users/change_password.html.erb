<div class="container d-flex justify-content-center">
<div class="m-4 p-4 border col-sm-6">
    <h1>Change Password</h1>
<%= form_with url: user_password_path(@user.id), :class=>"form-group", local:true do |f|%>
<% if @user.errors.any? %>
<p class="text-danger">
    <%= @user.errors.full_messages.join(', ')%>
</p>
<% end %>
    <%= f.label :current_password  %> 
<div class="input-group mb-2">
    <%= f.password_field :current_password, :class=>'form-control'%> 
</div>

    <%= f.label :new_password %>    
<div class="input-group mb-2">
    <%= f.password_field :password ,:class=>'form-control'%>
</div>
    <%= f.label :new_password_confirmation %>
<div class="input-group mb-2">   
    <%= f.password_field :password_confirmation, :class=>'form-control'%>
</div>
<div class="d-flex justify-content-between">
<div>
<%= f.submit :class => 'btn btn-outline-primary mt-4'%>
</div>
  <div>
    <%= link_to("Cancel", root_path, :class => 'btn btn-outline-primary mt-4')%>
</div>
<% end %>
</div>
</div>